<%= form_with(model: task_r, local: true) do |f| %>
  <% if task_r.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task_r.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  &nbsp;
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  &nbsp;
  <%= f.submit '登録' %>
<% end %>
